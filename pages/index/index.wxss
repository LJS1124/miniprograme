/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.page-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 30rpx;
}

.header {
  padding: 60rpx 0 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo-container {
  text-align: center;
}

.title-text {
  font-size: 72rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-bottom: 10rpx;
  font-family: "Comic Sans MS", cursive, sans-serif;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.subtitle-text {
  font-size: 32rpx;
  color: var(--text-secondary);
  margin-bottom: 30rpx;
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.btn-container {
  width: 70%;
  margin-bottom: 50rpx;
}

.btn-container .btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 36rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.word-library-section {
  width: 100%;
  margin-bottom: 50rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  text-align: center;
  color: var(--text-primary);
}

.library-options {
  justify-content: center;
  gap: 20rpx;
}

.library-option {
  width: 45%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid #e0e0e0;
  transition: all 0.3s;
}

.library-option.selected {
  background-color: var(--primary-color);
  color: white;
  border-color: var(--primary-color);
}

.bottom-buttons {
  width: 100%;
  display: flex;
  justify-content: space-around;
}

.bottom-buttons .btn {
  padding: 16rpx 30rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 40rpx;
  font-size: 28rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
}

.bottom-buttons .btn .iconfont {
  margin-right: 10rpx;
}

/* 规则弹窗 */
.rules-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.modal-content {
  width: 80%;
  background-color: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.modal-title {
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
  color: var(--primary-color);
}

.modal-text {
  font-size: 30rpx;
  line-height: 1.6;
  margin-bottom: 40rpx;
  color: var(--text-primary);
}

.modal-content .btn {
  width: 70%;
  margin: 0 auto;
}
