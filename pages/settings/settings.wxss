/* settings.wxss */
.page-container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f8f8f8;
  box-sizing: border-box;
}

.settings-container {
  padding: 30rpx;
  border-radius: 16rpx;
  background-color: #ffffff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.setting-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 20rpx;
}

.options-row {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.option-item {
  flex: 1;
  min-width: 160rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  color: #666666;
  font-size: 28rpx;
  transition: all 0.3s;
}

.option-item.selected {
  background-color: #4a90e2;
  color: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(74, 144, 226, 0.3);
}

.toggle-row {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.toggle-item {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
}

.toggle-label {
  font-size: 28rpx;
  color: #666666;
  margin-right: 20rpx;
}

.toggle-switch {
  position: relative;
  width: 100rpx;
  height: 56rpx;
  background-color: #e0e0e0;
  border-radius: 28rpx;
  transition: all 0.3s;
}

.toggle-switch.active {
  background-color: #7ed321;
}

.toggle-button {
  position: absolute;
  top: 4rpx;
  left: 4rpx;
  width: 48rpx;
  height: 48rpx;
  background-color: #ffffff;
  border-radius: 24rpx;
  transition: all 0.3s;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.toggle-switch.active .toggle-button {
  transform: translateX(44rpx);
}

.btn-container {
  display: flex;
  justify-content: center;
  margin-top: 60rpx;
}

.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  transition: all 0.3s;
}

.btn-primary {
  background-color: #4a90e2;
  color: #ffffff;
  min-width: 320rpx;
  box-shadow: 0 4rpx 10rpx rgba(74, 144, 226, 0.3);
}

.btn-primary:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 6rpx rgba(74, 144, 226, 0.3);
}
