/* prepare.wxss */
.page-container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f8f8f8;
  box-sizing: border-box;
}

.prepare-container {
  padding: 30rpx;
  border-radius: 16rpx;
  background-color: #ffffff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  min-height: 80vh;
  display: flex;
  flex-direction: column;
}

/* 队伍信息样式 */
.team-info {
  padding: 40rpx;
  border-radius: 16rpx;
  color: #ffffff;
  text-align: center;
  margin-bottom: 40rpx;
}

.team-name {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.team-turn {
  font-size: 32rpx;
  opacity: 0.9;
}

/* 游戏信息样式 */
.game-info {
  margin: 40rpx 0;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}

.info-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 20rpx;
}

.info-label {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 8rpx;
}

.info-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

/* 游戏提示样式 */
.game-tips {
  background-color: #f5f5f5;
  padding: 30rpx;
  border-radius: 16rpx;
  margin: 20rpx 0 40rpx;
}

.tips-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
}

.tips-text {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
}

/* 按钮样式 */
.btn-container {
  display: flex;
  justify-content: center;
  margin-top: auto;
  padding: 40rpx 0;
}

.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  transition: all 0.3s;
}

.btn-primary {
  background-color: #4a90e2;
  color: #ffffff;
  min-width: 320rpx;
  box-shadow: 0 4rpx 10rpx rgba(74, 144, 226, 0.3);
}

.btn-primary:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 6rpx rgba(74, 144, 226, 0.3);
}

/* 倒计时样式 */
.countdown-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.countdown-value {
  font-size: 180rpx;
  font-weight: bold;
  line-height: 1;
  margin-bottom: 40rpx;
  animation: pulse 1s infinite;
}

.countdown-text {
  font-size: 36rpx;
  color: #666666;
}

@keyframes pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
  100% {
    transform: scale(1);
  }
}
